<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D3D3D3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view_cookie_monster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/hungry"
        android:scaleType="centerInside"
        android:padding="16dp"
        android:src="@drawable/hungry"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B388FF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_m_so_hungry"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/button_eat_cookie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eat_cookie"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>
